<mah:MetroWindow x:Class="nfecreator.TELAPARAMETROS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        xmlns:local="clr-namespace:nfecreator"
        xmlns:utils="clr-namespace:DFe.Utils;assembly=DFe.Utils"
        xmlns:entidades="clr-namespace:DFe.Classes.Entidades;assembly=DFe.Classes"
        xmlns:nfeclsidetipos="clr-namespace:NFe.Classes.Informacoes.Identificacao.Tipos;assembly=NFe.Classes"
        d:DataContext="{d:DesignInstance {x:Type local:Parametros}, IsDesignTimeCreatable=True}"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"           
        Style="{DynamicResource MeuMetroWindowJanelas}"                 
        Background="{StaticResource MahApps.Brushes.ThemeBackground}"                 
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"        
        Title="Parametros do Sistema" Height="600" Width="580">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
            </ResourceDictionary.MergedDictionaries>
            <local:EnumParaBool x:Key="EnumParaBool" />
            <CollectionViewSource x:Key="EstadosEmitente">
                <!--Coleção para ordernar o Enum que poderá ser usado em combos, listboxes, etc-->
                <CollectionViewSource.SortDescriptions>
                    <scm:SortDescription />
                </CollectionViewSource.SortDescriptions>
                <CollectionViewSource.Source>
                    <ObjectDataProvider
                    MethodName="GetNames"
                    ObjectType="{x:Type sys:Enum}">
                        <ObjectDataProvider.MethodParameters>
                            <x:Type TypeName="entidades:Estado" />
                        </ObjectDataProvider.MethodParameters>
                    </ObjectDataProvider>
                </CollectionViewSource.Source>
            </CollectionViewSource>
            <CollectionViewSource x:Key="EstadosWebService">
                <!--Coleção para ordernar o Enum que poderá ser usado em combos, listboxes, etc-->
                <CollectionViewSource.SortDescriptions>
                    <scm:SortDescription />
                </CollectionViewSource.SortDescriptions>
                <CollectionViewSource.Source>
                    <ObjectDataProvider
                    MethodName="GetValues"
                    ObjectType="{x:Type sys:Enum}">
                        <ObjectDataProvider.MethodParameters>
                            <x:Type TypeName="entidades:Estado" />
                        </ObjectDataProvider.MethodParameters>
                    </ObjectDataProvider>
                </CollectionViewSource.Source>
            </CollectionViewSource>
        </ResourceDictionary>
    </Window.Resources>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="Teste" />
    </Window.TaskbarItemInfo>
    <Grid >
        <StackPanel  HorizontalAlignment="Left" Width="574" VerticalAlignment="Top">
            <TabControl VerticalAlignment="Center" Style="{StaticResource MyTabControl}" >
                <TabItem Header="Sua Empresa" Style="{StaticResource MeuTabItem}" >
                    <WrapPanel >
                        <GroupBox Header="Dados cadastrados" Foreground="{StaticResource MahApps.Brushes.Text}"  Width="565" Height="158">
                            <StackPanel >
                                <WrapPanel >
                                    <TextBlock Text="CNPJ:"  HorizontalAlignment="Left"  VerticalAlignment="Top" Width="125" Height="22" Margin="1"  />
                                    <TextBox x:Name="TxtEmitCnpj"  Style="{StaticResource MeuTextBox}"   Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                                       KeyDown="TxtEmitCnpj_KeyDown"
                                             Text="{Binding Cnpj, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="1" />
                                    <TextBlock Text=" Incrição Estadual:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Height="22" Margin="1" />
                                    <TextBox x:Name="TxtEmitIe" Height="22" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"
                                          Text="{Binding Ie, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="1" />
                                </WrapPanel>
                                <WrapPanel >
                                    <TextBlock Text="Razão Social:" HorizontalAlignment="Left" Width="125" VerticalAlignment="Top" Height="22" Margin="1" />
                                    <TextBox x:Name="TxtEmitRazao" Style="{StaticResource MeuTextBox}"  Height="22"
                                      TextWrapping="Wrap" VerticalAlignment="Top" Width="415"
                                      Text="{Binding Razaosocial, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="1" />
                                </WrapPanel>
                                <WrapPanel >
                                    <TextBlock Text="Fantasia:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Height="22" Margin="1" />
                                    <TextBox x:Name="TxtEmitFantasia" Style="{StaticResource MeuTextBox}" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="415"
                                      Text="{Binding Nome, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="1" />
                                </WrapPanel>
                                <WrapPanel>
                                    <TextBlock Text=" CNAE Fiscal: " HorizontalAlignment="Left" Height="22"
                                           VerticalAlignment="Top" Width="125" Margin="1" />
                                    <TextBox x:Name="cnaefTextBox"  Style="{StaticResource MeuTextBox}" Text="{Binding Cnae, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged}"
                                             Width="120" Height="22" Margin="1"  />
                                    <TextBlock Text=" Inscrição Municipal:" HorizontalAlignment="Left" Height="22"
                                           VerticalAlignment="Top" Width="125" Margin="1" />
                                    <TextBox x:Name="inscricaomunicipalTextBox" Style="{StaticResource MeuTextBox}"
                                               Text="{Binding Im, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged}"
                                             Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" Margin="1"/>
                                </WrapPanel>
                                <WrapPanel>
                                    <TextBlock Text=" I.E. Subs. Tributário:" HorizontalAlignment="Left"
                                       TextWrapping="Wrap"  Margin="1"   VerticalAlignment="Top" Width="125"  />
                                    <TextBox x:Name="iestTextBox"  Height="22" Style="{StaticResource MeuTextBox}"
                                            Text="{Binding Iest, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged}"
                                            TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="1"/>
                                    <TextBlock Text="CRT:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Margin="1" Height="22" />
                                    <ComboBox x:Name="CmbCrt"  HorizontalAlignment="Left" Style="{StaticResource MeuComboBox}"  VerticalAlignment="Top" KeyDown="TextBox_KeyDown"  Width="165" Height="22" Margin="1" >
                                        <ComboBoxItem >Simples Nacional</ComboBoxItem>
                                        <ComboBoxItem >Simples Nacional - sublimite excedido</ComboBoxItem>
                                        <ComboBoxItem >Normal</ComboBoxItem>
                                        <ComboBoxItem >Simples Nacional MEI</ComboBoxItem>
                                    </ComboBox>
                                </WrapPanel>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Endereço da Empresa" Foreground="{StaticResource MahApps.Brushes.Text}" Width="564">
                            <StackPanel>
                                <WrapPanel >
                                    <TextBlock Text="CEP:" HorizontalAlignment="Left" Width="125" Height="22" Margin="1" />
                                    <TextBox x:Name="TxtEmitCep"  Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                                            KeyDown="TxtEmitCep_KeyDown" Style="{StaticResource MeuTextBox}"
                                             Text="{Binding Cep, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="1" />
                                    <Button x:Name="BtnCerXml"  Style="{StaticResource EntrarButton}"
                                            Margin="1" Width="22"  Height="22" 
                                             Click="BtnCerXml_Click"        >
                                        <WrapPanel >
                                            <fa:SvgAwesome Width="12" Height="12" Icon="Solid_MapMarkerAlt" Foreground="White"/>
                                        </WrapPanel>
                                    </Button>
                                </WrapPanel>
                                <WrapPanel >
                                    <TextBlock Text="Logradouro:" HorizontalAlignment="Left"  Width="125" VerticalAlignment="Top" Height="22" Margin="1" />
                                    <TextBox x:Name="TxtEmitLogradouro"  Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="415" Style="{StaticResource MeuTextBox}"
                                        Text="{Binding Endereco, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="1" />
                                </WrapPanel>
                                <WrapPanel >
                                    <TextBlock Text="Número:" HorizontalAlignment="Left" Width="125" VerticalAlignment="Top" Height="22" Margin="1" />
                                    <TextBox x:Name="TxtEmitNumero"  Style="{StaticResource MeuTextBox}" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                                          Text="{Binding Complemento, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="1" />
                                    <TextBlock Text=" Complemento:" HorizontalAlignment="Left" Width="125" VerticalAlignment="Top" Height="22" Margin="1" />
                                    <TextBox x:Name="TxtEmitComplemento"  Style="{StaticResource MeuTextBox}" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"
                                    Text="{Binding Comple2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="1" />
                                </WrapPanel>
                                <WrapPanel >
                                    <TextBlock Text="Bairro:" HorizontalAlignment="Left" Width="125"  VerticalAlignment="Top" Height="22" Margin="1" />
                                    <TextBox x:Name="TxtEmitBairro" Style="{StaticResource MeuTextBox}"  Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="415"
                                     Margin="1"  Text="{Binding Bairro, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </WrapPanel>
                                <WrapPanel >
                                    <TextBlock Text="Cidade:" HorizontalAlignment="Left" Width="125" VerticalAlignment="Top" Height="22" Margin="1" />
                                    <TextBox x:Name="TxtEmitCidade" Style="{StaticResource MeuTextBox}"  Height="22"
                                         TextWrapping="Wrap" VerticalAlignment="Top" Width="334"
                                          Text="{Binding Cidade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="1" />
                                    <TextBlock Text="UF:" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="30" Height="22" Margin="1" />
                                    <ComboBox x:Name="CmbEmitUf" KeyDown="TextBox_KeyDown"  Style="{StaticResource MeuComboBox}"   Height="22" ItemsSource="{Binding Source={StaticResource EstadosEmitente}}"  
                                          SelectionChanged="CmbEmitUf_SelectionChanged"    SelectedItem="{Binding Uf, UpdateSourceTrigger=PropertyChanged}" Width="48" Margin="1" />
                                </WrapPanel>
                                <WrapPanel >
                                    <TextBlock Text="Cód Cidade:" HorizontalAlignment="Left" Width="125"  VerticalAlignment="Top" Height="22" Margin="1" />
                                    <TextBox x:Name="TxtEmitCodCidade" Height="22" Width="120"  Style="{StaticResource MeuTextBox}"
                                        Text="{Binding Codcidade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Text=" País:" HorizontalAlignment="Left" Width="125" VerticalAlignment="Top" Height="22" Margin="1" />
                                    <TextBox x:Name="paistextbox" Text="BRASIL" IsReadOnly="True" Style="{StaticResource MeuTextBox}" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"
                                          Margin="1" />
                                </WrapPanel>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Informações do Contato" Foreground="{StaticResource MahApps.Brushes.Text}"  Width="565">
                            <StackPanel>
                                <WrapPanel >
                                    <TextBlock Text="Responsável:" HorizontalAlignment="Left" Width="125" Height="22" Margin="1"/>
                                    <TextBox x:Name="TxtEmitResponsavel"  Style="{StaticResource MeuTextBox}" Height="22"
                                             Text="{Binding Responsavel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  TextWrapping="Wrap" VerticalAlignment="Top" Width="415" Margin="1" />
                                </WrapPanel>
                                <WrapPanel >
                                    <TextBlock Text="Telefone:"  Width="125" Height="22" Margin="1" />
                                    <TextBox x:Name="TxtEmitFone"   Height="22" Style="{StaticResource MeuTextBox}"
                                        TextWrapping="Wrap" VerticalAlignment="Top" Width="125"
                                        Text="{Binding Fone_res, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="1" />
                                    <TextBlock  x:Name="CelularTextBlock" Text=" Celular:" HorizontalAlignment="Left"  Width="125" VerticalAlignment="Top" Height="22" Margin="1" />
                                    <TextBox x:Name="TxtEmitCelular" Height="22"  Style="{StaticResource MeuTextBox}"
                                      Text="{Binding Fone2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Margin="1" />
                                </WrapPanel>


                                <WrapPanel >
                                    <TextBlock Text="E-mail:" HorizontalAlignment="Left" Width="125" Margin="1" Height="22"/>
                                    <TextBox x:Name="TxtEmitEmail"   Height="22" Style="{StaticResource MeuTextBox}"
                                     Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" VerticalAlignment="Top" Width="415" Margin="1" />
                                </WrapPanel>
                            </StackPanel>



                        </GroupBox>


                    </WrapPanel>
                </TabItem>
                <TabItem Header="NF-e" Style="{StaticResource MeuTabItem}" >
                    <Grid >
                        <StackPanel>
                            <GroupBox x:Name="GpbAmbiente"  Foreground="{StaticResource MahApps.Brushes.Text}" Header="Selecione o Ambiente de Destino" Height="45">
                                <Grid x:Name="GrdAmbiente">
                                    <WrapPanel >
                                        <RadioButton x:Name="RbtAmbHomologacao" Content="Homologação"
                                                         HorizontalAlignment="Left" VerticalAlignment="Top"
                                                        Margin="2"
                                                         />
                                        <RadioButton Visibility="Collapsed" x:Name="RbtAmbProducao" Content="Produção"
                                                         HorizontalAlignment="Left" VerticalAlignment="Top"
                                                         Margin="2"   
                                                     />

                                    </WrapPanel>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Informações da SEFAZ" Foreground="{StaticResource MahApps.Brushes.Text}"  >
                                <StackPanel>
                                    <WrapPanel>
                                        <TextBlock Text="Série da NF-e:" HorizontalAlignment="Left"
                                           VerticalAlignment="Top" Width="100" Margin="1" Height="20" />
                                        <TextBox   x:Name="TxtSerie"  Width="80" Height="20" Margin="1" Style="{StaticResource MeuTextBox}"  />
                                        <TextBlock  x:Name="SequenciaTextBlock" Text=" Sequência da NF-e (última):" HorizontalAlignment="Left"
                                           VerticalAlignment="Top" Width="155" Margin="1" Height="20" />
                                        <TextBox x:Name="SequenciaNFeTextBox" Style="{StaticResource MeuTextBox}"   Width="140" Height="20" Margin="1"  />
                                    </WrapPanel>
                                    <WrapPanel>
                                        <TextBlock Text="Calcular Tributos:" HorizontalAlignment="Left"
                                           VerticalAlignment="Top" Width="100" Margin="1" Height="20" />
                                        <ComboBox x:Name="CBCalculatrib" KeyDown="TextBox_KeyDown"    HorizontalAlignment="Left"
                                                 VerticalAlignment="Top" Style="{StaticResource MeuComboBox}"
                                                 Width="80" Height="20" Margin="1">
                                            <ComboBoxItem  >SIM</ComboBoxItem>
                                            <ComboBoxItem  >NÃO</ComboBoxItem>
                                        </ComboBox>

                                        <TextBlock TextWrapping="Wrap"  Text=" Para atender às exigências da Lei 12.741/12." ToolTip="https://deolhonoimposto.ibpt.org.br/" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350"  />
                                    </WrapPanel>
                                    <WrapPanel >
                                        <TextBlock Text="Servidor SEFAZ:" HorizontalAlignment="Left"
                                           VerticalAlignment="Top" Width="100" Margin="1" Height="20" />
                                        <ComboBox x:Name="CmbUfDestino"   IsSynchronizedWithCurrentItem="False"  HorizontalAlignment="Left"
                                             KeyDown="TextBox_KeyDown" Style="{StaticResource MeuComboBox}"
                                                        ItemsSource="{Binding Source={StaticResource EstadosWebService}, UpdateSourceTrigger=PropertyChanged}"                                          
                                               Width="80" Height="20" Margin="1" />
                                        <Button x:Name="BtnStatusNFe" Background="Transparent"  VerticalAlignment="Top" Click="BtnStatusNFe_Click"  Cursor="Hand"  Width="20" Height="20"  >
                                            <WrapPanel>
                                                <fa:SvgAwesome x:Name="BtnStatusNFeIcon" Width="14" Height="14" Icon="Solid_Circle" VerticalAlignment="Top" Foreground="CadetBlue"/>
                                            </WrapPanel>
                                        </Button>
                                        <Label x:Name="statusLabel" Content=" " HorizontalAlignment="Left"
                                           VerticalAlignment="Top" Width="179" FontSize="10" />
                                    </WrapPanel>
                                    <WrapPanel >
                                        <TextBlock Text="Tipo de Emissão:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="21" Width="100" Margin="1" />
                                        <ComboBox  x:Name="CBTipodeemissao" Style="{StaticResource MeuComboBox}"  KeyDown="TextBox_KeyDown"                                               
                                               Width="80" Height="20" Margin="1"  />

                                        <Button x:Name="BtnTProcessaNFe" Width="130"  Style="{DynamicResource EntrarButton}"                            
                                        Height="20" Click="BtnProcessaNFe_Click"  Margin="5"  >
                                            <WrapPanel >
                                                <!--<fa:SvgAwesome Width="14" Height="14" Icon="Solid_Circle" Foreground="White" />-->
                                                <fa:FontAwesome Text=" Processamento NF-e "  Foreground="White" />
                                            </WrapPanel>
                                        </Button>
                                        <Button x:Name="BtProcessaCCe" Width="130"  Style="{DynamicResource EntrarButton}"                            
                                        Height="20" Click="BtnProcessaCCe_Click"  Margin="5"  >
                                            <WrapPanel >
                                                <!--<fa:SvgAwesome Width="14" Height="14" Icon="Solid_Circle" Foreground="White" />-->
                                                <fa:FontAwesome Text=" Processamento CC-e "  Foreground="White" />
                                            </WrapPanel>
                                        </Button>
                                    </WrapPanel>
                                    <WrapPanel>

                                    </WrapPanel>
                                    <WrapPanel>
                                        <TextBlock Text="pCredSN:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="1" Height="20" />

                                        <TextBox x:Name="pCredSNTextBox" Height="20" Width="80"  Style="{StaticResource MeuTextBox}"
                                        Text="{Binding PCredsn, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true,  ConverterCulture='pt-BR'}" Margin="1" />

                                        <TextBlock TextWrapping="Wrap"  Text=" % Aliquota de Crédito (SIMPLES NACIONAL)." ToolTip="Esse valor deverá ser atualizado periodicamente" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350"  />

                                    </WrapPanel>
                                    <WrapPanel>
                                        <TextBlock Text="Impressão Lote:" HorizontalAlignment="Left" Width="100" Margin="1"/>
                                        <ComboBox x:Name="impressaoemLoteComboBox" KeyDown="TextBox_KeyDown"    HorizontalAlignment="Left"
                                                 VerticalAlignment="Top" Style="{StaticResource MeuComboBox}"
                                                 Width="80" Height="20" Margin="1">
                                            <ComboBoxItem  >SIM</ComboBoxItem>
                                            <ComboBoxItem  >NÃO</ComboBoxItem>
                                            <ComboBoxItem  ></ComboBoxItem>
                                        </ComboBox>
                                    </WrapPanel>
                                    <WrapPanel>
                                        <TextBlock Text="IPI Devol:" HorizontalAlignment="Left" Width="100" Margin="1"/>
                                        <ComboBox x:Name="ipidevolComboBox" KeyDown="TextBox_KeyDown"    HorizontalAlignment="Left"
                                                 VerticalAlignment="Top" Style="{StaticResource MeuComboBox}"
                                                 Width="80" Height="20" Margin="1">
                                            <ComboBoxItem  >SIM</ComboBoxItem>
                                            <ComboBoxItem  >NÃO</ComboBoxItem>
                                            <ComboBoxItem  ></ComboBoxItem>
                                        </ComboBox>
                                        <TextBlock TextWrapping="Wrap"  Text=" Usa IPI Devolução na Nota Fiscal." ToolTip="Confira com sua contabilidade a obrigatoriedade." HorizontalAlignment="Left" VerticalAlignment="Top" Width="350"  />
                                    </WrapPanel>
                                    <WrapPanel>
                                        <TextBlock Text="Cod. de Aut.:"  HorizontalAlignment="Left" Width="100" Margin="1"/>
                                        <ComboBox x:Name="codigoautorizacaoComboBox" KeyDown="TextBox_KeyDown"    HorizontalAlignment="Left"
                                                 VerticalAlignment="Top" Style="{StaticResource MeuComboBox}"
                                                 Width="80" Height="20" Margin="1">
                                            <ComboBoxItem  >SIM</ComboBoxItem>
                                            <ComboBoxItem  >NÃO</ComboBoxItem>
                                            <ComboBoxItem  ></ComboBoxItem>
                                        </ComboBox>
                                        <TextBlock TextWrapping="Wrap"  Text=" Confira com sua contabilidade a obrigatoriedade." ToolTip="SIM: Mostrar para  código de autorização de cartão." HorizontalAlignment="Left" VerticalAlignment="Top" Width="350"  />
                                    </WrapPanel>
                                    <WrapPanel>
                                        <TextBlock Text="InfAdProd.:"  HorizontalAlignment="Left" Width="100" Margin="1"/>
                                        <ComboBox x:Name="infadprodComboBox" KeyDown="TextBox_KeyDown"    HorizontalAlignment="Left"
                                                 VerticalAlignment="Top" Style="{StaticResource MeuComboBox}"
                                                 Width="80" Height="20" Margin="1">
                                            <ComboBoxItem  >SIM</ComboBoxItem>
                                            <ComboBoxItem  >NÃO</ComboBoxItem>
                                            <ComboBoxItem  ></ComboBoxItem>
                                        </ComboBox>
                                        <TextBlock TextWrapping="Wrap"  Text=" Coloca OBS do Produto na NF-e." ToolTip="SIM: Mostrar para  código de autorização de cartão." HorizontalAlignment="Left" VerticalAlignment="Top" Width="350"  />
                                    </WrapPanel>
                                    <WrapPanel>
                                        <TextBlock Text="ICMS Deson.:"  HorizontalAlignment="Left" Width="100" Margin="1"/>
                                        <ComboBox x:Name="vicmsdesonComboBox" KeyDown="TextBox_KeyDown"    HorizontalAlignment="Left"
                                                 VerticalAlignment="Top" Style="{StaticResource MeuComboBox}"
                                                 Width="80" Height="20" Margin="1">
                                            <ComboBoxItem  >SIM</ComboBoxItem>
                                            <ComboBoxItem  >NÃO</ComboBoxItem>
                                            <ComboBoxItem  ></ComboBoxItem>
                                        </ComboBox>
                                        <TextBlock TextWrapping="Wrap"  Text=" Informar apenas nos motivos de desoneração documentados." ToolTip="SIM: Mostrar para informmar." HorizontalAlignment="Left" VerticalAlignment="Top" Width="350"  />
                                    </WrapPanel>

                                </StackPanel>
                            </GroupBox>


                            <GroupBox Header="LogoMarca - Informe a logomarca a ser usada no DANFE NF-e" Foreground="{StaticResource MahApps.Brushes.Text}"   VerticalAlignment="Top" Height="160"  >
                                <WrapPanel >
                                    <WrapPanel Orientation="Horizontal" Margin="5">
                                        <Border BorderThickness="1"  BorderBrush="Black"
                                                Height="100"
                                                 Width="100"
                                                    HorizontalAlignment="Left" VerticalAlignment="Top">
                                            <Image x:Name="LogoEmitente"  />
                                        </Border>
                                        <StackPanel Margin="5" Width="35">
                                            <Button x:Name="BtnLogo" Click="BtnLogoNFe_Click"    VerticalAlignment="Top" Style="{StaticResource  EntrarButton}" 
                                                      Height="35" Margin="1,1,0,1" Width="33" HorizontalAlignment="Left" >
                                                <WrapPanel >
                                                    <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Image" Foreground="White"  RenderTransformOrigin="0.5,0.607"/>
                                                </WrapPanel>
                                            </Button>
                                            <Button x:Name="BtnRemoveLogo" Click="BtnRemoveLogoNFe_Click" Style="{StaticResource  EntrarButton}"    VerticalAlignment="Top"
                                                      Height="35" Width="Auto">
                                                <WrapPanel >
                                                    <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Times" Foreground="White" />
                                                </WrapPanel>
                                            </Button>
                                        </StackPanel>
                                    </WrapPanel>
                                </WrapPanel>
                            </GroupBox>




                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="NFC-e" Visibility="Visible" Style="{StaticResource MeuTabItem}" >
                    <Grid >
                        <StackPanel>
                            <GroupBox Header="Código de Segurança do Contribuinte" Foreground="{StaticResource MahApps.Brushes.Text}"  >
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="Id. do CSC:" Width="85" Grid.Column="0" />
                                        <TextBox Name="CidtokenTextBox" Width="80" Height="22"  Style="{StaticResource MeuTextBox}" />
                                        <Button x:Name="BtnTProcessaNFCe" Width="130"  Style="{DynamicResource EntrarButton}"                            
                                        Height="20" Click="BtnProcessaNFCe_Click"  Margin="5"  >
                                            <WrapPanel >
                                                <!--<fa:SvgAwesome Width="14" Height="14" Icon="Solid_Circle" Foreground="White" />-->
                                                <fa:FontAwesome Text=" Processamento NFC-e " Foreground="White" />
                                            </WrapPanel>
                                        </Button>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal">
                                        <TextBlock Text="CSC:" Width="84"  />
                                        <TextBox Name="CscTextBox" Height="22"   Width="350" Style="{StaticResource MeuTextBox}"  />

                                    </StackPanel>

                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="Informações NFC-e" Foreground="{StaticResource MahApps.Brushes.Text}"   >
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="Série da NFC-e:" HorizontalAlignment="Left"
                                           VerticalAlignment="Top" Width="85" />
                                        <TextBox x:Name="TxtSerienfce"   Width="80" Height="22"  Style="{StaticResource MeuTextBox}" />


                                        <TextBlock Text=" Sequência NFC-e:" Width="105" Grid.Column="0" />
                                        <TextBox Name="SequenciaNFCeTextBox" Width="80"   Height="22"   Style="{StaticResource MeuTextBox}" />


                                    </StackPanel>

                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="Margens de impressão (em milímetros)" Foreground="{StaticResource MahApps.Brushes.Text}"  VerticalAlignment="Top">
                                <StackPanel Orientation="Vertical">
                                    <WrapPanel Margin="0,5">
                                        <TextBlock Text="Esquerda:" Width="85"/>
                                        <TextBox Name="EsquerdaTextBox" Style="{StaticResource MeuTextBox}"  Width="80" AutoWordSelection="True" Height="20"></TextBox>

                                        <TextBlock Text=" Direita:" Width="105"/>
                                        <TextBox Name="DireitaTextBox" Style="{StaticResource MeuTextBox}"  Width="80" AutoWordSelection="True" Height="20"></TextBox>
                                    </WrapPanel>

                                </StackPanel>
                            </GroupBox>
