<Window x:Class="nfecreator.InputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nfecreator"
        mc:Ignorable="d"
        Title=" " Height="145" Width="435"
         SizeToContent="Height" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <StackPanel Name="Panel" Orientation="Vertical" VerticalAlignment="Top" Margin="10,10,10,0">
        <TextBlock x:Name="TxtDescricao" TextWrapping="Wrap" Text="TESTE DE INPUT" Margin="0,0,0,10" />
        <TextBox Name="TxtValor"  Style="{StaticResource MeuTextBox}" Height="23" TextWrapping="NoWrap" Text="TextBox" KeyUp="TxtValor_KeyUp"  HorizontalAlignment="Stretch" />
        <Grid Name="Grid" Height="46" Margin="0,0,0,0">
            <Button x:Name="BtnOk" Style="{StaticResource VendasButton}" Content="Ok" HorizontalAlignment="Right" Margin="0,10,95,0" VerticalAlignment="Top"
                  Foreground="White"   Width="90" Click="BtnOk_Click" Height="22" />
            <Button x:Name="BtnCancelar" Style="{StaticResource VendasButton}"  Content="Cancelar" HorizontalAlignment="Right" Margin="0,10,0,0"
                 Foreground="White"   VerticalAlignment="Top" Width="90" Click="BtnCancelar_Click" Height="22" />
        </Grid>
    </StackPanel>
</Window>
