<mah:MetroWindow
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        x:Class="nfecreator.TELAPROCESSAMENTOCCE"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase" 
        xmlns:local="clr-namespace:nfecreator"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
    
        Icon="/nfecreator;component/Pics/nfe.png" 
    
        Style="{StaticResource MeuMetroWindowJanelas}"   
        
        Title=" CIAF - SOLUÇÕES EM SOFTWARE " Height="415" Width="800">
    <Grid>
        <StackPanel>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center"  Background="#FFFFFF" Height="386"  >
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" x:Name="StatusGrid" Background="{DynamicResource MahApps.Brushes.Accent}" Width="800" >
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock x:Name="statusTextBlock" Foreground="White" Text="PROCESSAMENTO DA CARTA CC-e"  FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="0" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1"  Width="800">
                    <Grid Height="335" VerticalAlignment="Top" >
                        <Button Click="ButtonSite_Click" Style="{StaticResource LinkButton}"  >
                            <StackPanel >
                                <Image x:Name="ImagedeFundo" Source="https://ciaf.com.br/dfe/img/CREATORNFE.png" Stretch="Fill" ImageFailed="Image_ImageFailed" Height="320" Width="180"  />
                            </StackPanel >
                        </Button>

                        <Grid Grid.Row="1" Margin="10,20">
                            <!--<TextBlock Text="Wrong username or password. Try again." HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />-->
                            <fa:SvgAwesome x:Name="CarregamentoColo" Icon="Solid_Spinner" Visibility="Collapsed" Spin="True" SpinDuration="4" Width="40" Foreground="{StaticResource BlueCiafBrush}" Margin="436,-6,304,6"/>
                        </Grid>

                        <Grid Margin="180,264,0,0">
                            <WrapPanel Margin="10,0,0,0" Height="60" VerticalAlignment="Top" >
                                <Button Name="BtnAutorizar" Margin="5" Width="65" Height="45" Background="Green" Click="Autorizar_Click" Style="{StaticResource VendasColorButton}">
                                    <StackPanel >
                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_CheckCircle" Foreground="White"/>
                                        <fa:FontAwesome Text="Transmitir" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                                <Button Name="BtnVerificar" Margin="5"  Style="{StaticResource VendasColorButton}" Background="Blue" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="Verificar_Click" >
                                    <StackPanel >
                                        <fa:SvgAwesome Width="14" Height="14" Icon="Regular_DotCircle" Foreground="White"/>
                                        <fa:FontAwesome Text="Verificar" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </WrapPanel>
                            <WrapPanel HorizontalAlignment="Right" Margin="0" Width="186">
                                <Button Name="ConfiguracaoBtn" Margin="5" Width="80" Height="45" Click="Button_Click_2" Style="{StaticResource VendasButton}">
                                    <StackPanel >
                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Tools" Foreground="White"/>
                                        <fa:FontAwesome Text="Configuração" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                                <Button  Height="45" Width="80" Margin="5" Style="{StaticResource VendasColorButton}" Background="Red" Click="Button_Click_3">
                                    <StackPanel >
                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_PowerOff" Foreground="White"/>
                                        <fa:FontAwesome Text=" SAIR " Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </WrapPanel>
                        </Grid>
                        <WrapPanel Margin="201,10,277,61">
                            <TextBlock Text="Número da Carta:" Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120"  />
                            <TextBox x:Name="NumeroTextBox"  Margin="5"  KeyDown="NumeroTextBox_KeyDown" Style="{DynamicResource MeuTextBox}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160" />

                            <TextBlock Text="Número NF-e:" Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />

                            <TextBox x:Name="nrnfeTextBox" Margin="5" IsReadOnly="True" Style="{DynamicResource MeuTextBox}" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160"/>
                            <TextBlock Text="Número Seq:"  Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />

                            <TextBox x:Name="nrseqTextBox"  Margin="5" IsReadOnly="True" Style="{DynamicResource MeuTextBox}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160"/>

                            <TextBlock Text="Chave da NF-e:"  Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="87" />
                            <TextBox x:Name="chaveTextBox"  Margin="5" IsReadOnly="True" Style="{DynamicResource MeuTextBox}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>

                            <TextBlock  x:Name="StatusLabel" Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="53" Width="300" />

                        </WrapPanel>



                    </Grid>


                </Grid>

            </Grid>
        </StackPanel>

    </Grid>
</mah:MetroWindow>
