<mah:MetroWindow
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        x:Class="nfecreator.TELAPROCESSAMENTONFE"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase" 
        xmlns:local="clr-namespace:nfecreator"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"    
        Loaded="Window_Loaded"
        Closing="MetroWindow_Closing"
    
        Icon="/nfecreator;component/Pics/nfe.png"     
        Style="{StaticResource MeuMetroWindowJanelas}"

        Title=" CIAF - SOLUÇÕES EM SOFTWARE " Height="415" Width="800">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo  />
    </Window.TaskbarItemInfo>

    <Grid>
        <StackPanel>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Background="#FFFFFF"  >
                <Grid.RowDefinitions>
                    <RowDefinition Height="65"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" x:Name="StatusGrid" Background="{DynamicResource MahApps.Brushes.Accent}" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" >
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock x:Name="statusTextBlock" Foreground="White" Text="PROCESSAMENTO DA NOTA FISCAL"  FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="0" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1"   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <WrapPanel Grid.Column="0" >
                        <Button Click="ButtonSite_Click" Style="{StaticResource LinkButton}" Margin="0" >
                            <StackPanel >
                                <Image x:Name="ImagedeFundo" Source="https://ciaf.com.br/dfe/img/CREATORNFE.png" Stretch="Fill" ImageFailed="Image_ImageFailed"   Height="320" Width="180"  />
                            </StackPanel >
                        </Button>
                    </WrapPanel>
                    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="55"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" >
                            <StackPanel >
                                <WrapPanel>
                                    <TextBlock Text="Número da NF-e:" Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120"  />
                                    <TextBox x:Name="NumeroTextBox"  Margin="5"  KeyDown="NumeroTextBox_KeyDown" Style="{StaticResource MeuTextBox}" LostFocus="NumeroTextBox_LostFocus" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160" />
                                    <TextBlock Text="Série da Nota:"  Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />
                                    <TextBox x:Name="serieTextBox"  Margin="5" IsReadOnly="True" Style="{StaticResource MeuTextBox}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160"/>

                                </WrapPanel>
                                <WrapPanel>
                                    <TextBlock Text="Status:" Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />
                                    <TextBox x:Name="statusTextBox" Margin="5" IsReadOnly="True" Style="{StaticResource MeuTextBox}" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160"/>
                                    <TextBlock Text="Valor da Venda:"  Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />
                                    <TextBox x:Name="valorTextBox"  Margin="5" IsReadOnly="True" Style="{StaticResource MeuTextBox}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160"/>

                                </WrapPanel>
                                <WrapPanel>
                                    <TextBlock Text="Nome Cliente:" Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />
                                    <TextBox x:Name="nomeTextBox" Margin="5" IsReadOnly="True" Style="{StaticResource MeuTextBox}" HorizontalAlignment="Left" Height="23"  TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="460"/>
                                </WrapPanel>
                                <WrapPanel>
                                    <TextBlock Text="Chave da NF-e:"  Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />
                                    <TextBox x:Name="chaveTextBox"  Margin="5" IsReadOnly="True" Style="{StaticResource MeuTextBox}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="460"/>
                                </WrapPanel>
                                <WrapPanel>
                                </WrapPanel>
                                <WrapPanel>
                                    <TextBlock x:Name="JustificativaTextBlock" Margin="5" Text="Justificativa:" Visibility="Collapsed" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />
                                    <TextBox x:Name="JustificativaTextBox" Margin="5" IsReadOnly="True" Visibility="Collapsed" Style="{StaticResource MeuTextBox}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="460"/>
                                </WrapPanel>

                                <StackPanel Margin="5" HorizontalAlignment="Center"  VerticalAlignment="Center">
                                    <fa:SvgAwesome x:Name="Space"  Icon="Solid_SpaceShuttle" Width="50" Rotation="270" Foreground="{StaticResource BlueCiafBrush}" />
                                    <fa:SvgAwesome x:Name="Spinner" Visibility="Collapsed" Icon="Solid_Spinner"  Spin="True" SpinDuration="5" Width="40" Foreground="{StaticResource BlueCiafBrush}" />
                                    <TextBlock x:Name="CarregandoTextBlock" Visibility="Collapsed"  Text="Carregando... " HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </StackPanel>
                                <TextBlock  x:Name="statusLabel" Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Width="590" />
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1" Background="#EEEEEE">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <WrapPanel Grid.Column="0" Margin="2" >
                                <Button Name="BtnAutorizar" Margin="1" Width="65" Height="45" Background="Green" Click="Autorizar_Click" Style="{StaticResource VendasColorButton}">
                                    <StackPanel >
                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_CheckCircle" Foreground="White"/>
                                        <fa:FontAwesome Text="Autorizar" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                                <Button Name="BtnVerificar" Margin="1"  Width="65" Height="45" Click="Verificar_Click" Background="Blue"  Style="{StaticResource VendasColorButton}">
                                    <StackPanel >
                                        <fa:SvgAwesome Width="14" Height="14" Icon="Regular_DotCircle" Foreground="White"/>
                                        <fa:FontAwesome Text="Verificar" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                                <Button Name="BtnCancelar" Style="{StaticResource VendasColorButton}" Background="Red"  Margin="1" Width="65" Height="45" Click="Cancelar_Click"  >
                                    <StackPanel>
                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_TimesCircle" Foreground="White"/>
                                        <fa:FontAwesome Text="Cancelar" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                                <Button Name="BtnInutulizar" Background="Orange" Margin="1" Width="65" Height="45" Click="Inutilizar_Click" Style="{StaticResource VendasColorButton}">
                                    <StackPanel >
                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_MinusCircle" Foreground="White"/>
                                        <fa:FontAwesome Text="Inutilizar" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="BtnEmLote" Margin="1" Width="65" Height="45" Background="Purple" Click="BtnEmLote_Click"  Style="{StaticResource VendasColorButton}">
                                    <StackPanel >
                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_CheckCircle" Foreground="White"/>
                                        <fa:FontAwesome Text="em Lote" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </WrapPanel>
                            <WrapPanel HorizontalAlignment="Right" Grid.Column="1" Margin="2" >
                                <Button Name="updateButton"  Width="80" Height="45" Click="BtnUpdate_Click" Style="{StaticResource VendasButton}">
                                    <StackPanel >
                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Download" Foreground="White"/>
                                        <fa:FontAwesome Text="Atualiza Módulo"  FontSize="10" Foreground="White"/>
                                    </StackPanel>
                                </Button>

                                <Button Name="StatusSefazBtn"  Width="80" Height="45" Click="BtnStatusSefaz_Click"  Style="{StaticResource VendasButton}">
                                    <StackPanel >
                                        <fa:SvgAwesome x:Name="BtnStatusNFeIcon" Width="14" Height="14" Icon="Solid_Circle" Foreground="White"/>
                                        <fa:FontAwesome Text="Status Sefaz" Foreground="White"/>
                                    </StackPanel>
                                </Button>

                                <Button Name="ConfiguracaoBtn"  Width="80" Height="45" Click="Parametros_Click" Style="{StaticResource VendasButton}">
                                    <StackPanel >
                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Tools" Foreground="White"/>
                                        <fa:FontAwesome Text="Configuração" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </WrapPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </StackPanel>
        <local:TELARETORNONFE x:Name="telaretorno" Visibility="Collapsed" />
    </Grid>
</mah:MetroWindow>
