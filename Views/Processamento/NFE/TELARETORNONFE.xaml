<UserControl 
        x:Class="nfecreator.TELARETORNONFE"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nfecreator"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        mc:Ignorable="d"
        Height="390" Width="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center"   MinHeight="50" MinWidth="150" Height="390">
            <Grid.RowDefinitions>
                <RowDefinition Height="65"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" x:Name="StatusGrid" Background="{DynamicResource MahApps.Brushes.Accent}"  >
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="statusTextBlock" Foreground="White" Text="STATUS"  FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="5" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1" Width="800" >
                <WrapPanel  VerticalAlignment="Top" HorizontalAlignment="Center">
                    <WrapPanel>
                        <Button Click="ButtonSite_Click" Style="{StaticResource LinkButton}" >
                            <StackPanel >
                                <Image x:Name="ImagedeFundo"  Stretch="Fill"  Height="320" Width="180"  />
                            </StackPanel >
                        </Button>
                    </WrapPanel>
                    <Grid Width="620">
                    <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="55"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Background="#FFFFFF" >
                            <TabControl  x:Name="TabControPrincipal" TabStripPlacement="Bottom" Style="{StaticResource MyTabControlRetorno}" Height="265" >
                                <TabItem  x:Name="inftab"  Style="{StaticResource MeuTabItem}">
                                <TabItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <!--<fa:SvgAwesome Width="10" Height="10" Icon="Solid_ShoppingCart" Foreground="White"/>-->
                                        <TextBlock Text=" Informação " VerticalAlignment="Center" />
                                    </StackPanel>
                                </TabItem.Header>
                               <Grid Margin="2">
                                        <Grid.ColumnDefinitions >
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Image x:Name="qrcodeImage"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                        </Grid>
                                        <StackPanel  Grid.Column="0" >
                                            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                                                <TextBlock Text="Chave da Nota:" Foreground="{DynamicResource MahApps.Brushes.Text}" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="16" Width="60" FontSize="9" Margin="1" />
                                                <TextBox x:Name="chaveacessoTextBox" IsReadOnly="True" Style="{StaticResource MeuTextBox}"  Text="{Binding Chavedeacesso, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged}" Width="300" Height="25" Margin="1" />
                                                <Button x:Name="CopiarButton" Margin="2" Style="{StaticResource VendasButton}" HorizontalAlignment="Left"   VerticalAlignment="Top" Click="CopiarButton_Click"  Width="100" Height="25" >
                                                    <WrapPanel>
                                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Copy"  Foreground="White"/>
                                                        <fa:FontAwesome Text=" Copiar Chave " x:Name="copiarButtonText" Foreground="{StaticResource MahApps.Brushes.Button.Foreground}"/>
                                                    </WrapPanel>
                                                </Button>
                                            </WrapPanel>
                                            <WrapPanel x:Name="CancelamentoPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible" >
                                                <TextBlock Text="Protocolo:" Foreground="{DynamicResource MahApps.Brushes.Text}" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="16" Width="60" FontSize="9" Margin="1" />
                                                <TextBox x:Name="protocoloTextBox" IsReadOnly="True" Style="{StaticResource MeuTextBox}"  Text="{Binding Protocolo, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged}" Width="300" Height="25"  Margin="1" />
                                                <Button x:Name="ImprimirCancelamento" Margin="2" Style="{StaticResource VendasColorButton}" Click="ImprimirCancelamento_Click" Background="Red" HorizontalAlignment="Left"   VerticalAlignment="Top"  Width="100" Height="25" >
                                                    <WrapPanel>
                                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Print"  Foreground="White"/>
                                                        <fa:FontAwesome Text=" Cancelamento " Foreground="{StaticResource MahApps.Brushes.Button.Foreground}"/>
                                                    </WrapPanel>
                                                </Button>
                                            </WrapPanel>
                                            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                                                <TextBlock Text="Envia e-mail:" Foreground="{DynamicResource MahApps.Brushes.Text}" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="16" Width="60" FontSize="9" Margin="1" />
                                                <TextBox x:Name="emailTextBox" Style="{StaticResource MeuTextBox}"  Text="{Binding Email, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged}" Width="300" Height="25"  Margin="1" />
                                                <Button x:Name="EnviarEmailButton" Margin="2" Click="EnviarEmailButton_Click" Style="{StaticResource VendasButton}" HorizontalAlignment="Left"   VerticalAlignment="Top"  Width="100" Height="25" >
                                                    <WrapPanel>
                                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Envelope"  Foreground="White"/>
                                                        <fa:FontAwesome Text=" Enviar E-mail " Foreground="{StaticResource MahApps.Brushes.Button.Foreground}"/>
                                                    </WrapPanel>
                                                </Button>
                                            </WrapPanel>
                                            <WrapPanel x:Name="sendwhatsappWrapPanel" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                                <TextBlock Text="Telefone:" Foreground="{DynamicResource MahApps.Brushes.Text}" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="16" Width="60" FontSize="9" Margin="1" />
                                                <TextBox x:Name="telefoneTextBox" Style="{StaticResource MeuTextBox}"  Text="{Binding Telefone, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged}" Width="275" Height="25"  Margin="1" />

                                                <Button x:Name="BtnUnidade"  Click="BtnUnidade_Click" Width="25" Height="25"  Background="{StaticResource Theme.ShowcaseBrush}" Style="{StaticResource VendasColorButton}">
                                                    <StackPanel >
                                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Question" Foreground="{StaticResource MahApps.Brushes.Button.Foreground}"/>

                                                    </StackPanel>
                                                </Button>
                                                <Button x:Name="WhatsAppButton" Margin="2" Style="{StaticResource VendasButton}"  Background="Green" HorizontalAlignment="Left"   VerticalAlignment="Top"   Width="100" Height="25" Click="WhatsAppButton_Click" >
                                                    <WrapPanel>
                                                        <fa:SvgAwesome Width="14" Height="14" Icon="Brands_Whatsapp"  Foreground="White"/>
                                                        <fa:FontAwesome Text=" Mensagem " Foreground="{StaticResource MahApps.Brushes.Button.Foreground}"/>
                                                    </WrapPanel>
                                                </Button>


                                            </WrapPanel>
                                            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                                                <Button x:Name="SefazButton" Visibility="Visible" Margin="2" Style="{StaticResource VendasButton}" HorizontalAlignment="Left"   VerticalAlignment="Top"  Width="100" Height="25" Click="SefazButton_Click" >
                                                    <WrapPanel>
                                                        <fa:SvgAwesome Width="10" Height="10" Icon="Solid_Circle"  Foreground="White"/>
                                                        <fa:FontAwesome Text=" Abrir na SEFAZ" Foreground="{StaticResource MahApps.Brushes.Button.Foreground}"/>
                                                    </WrapPanel>
                                                </Button>
                                                <Button x:Name="AbrirButton" Margin="2" Style="{StaticResource VendasButton}" HorizontalAlignment="Left"   VerticalAlignment="Top"   Width="100" Height="25" Click="AbrirButton_Click" >
                                                    <WrapPanel>
                                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_BookOpen"  Foreground="White"/>
                                                        <fa:FontAwesome Text=" Abrir PDF" Foreground="{StaticResource MahApps.Brushes.Button.Foreground}"/>
                                                    </WrapPanel>
                                                </Button>

                                                <Button x:Name="SalvarPDFButton" Margin="2" Style="{StaticResource VendasButton}" HorizontalAlignment="Left"   VerticalAlignment="Top"    Width="100" Height="25" Click="SalvarPDFButton_Click" >
                                                    <WrapPanel>
                                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_FileAlt"  Foreground="White"/>
                                                        <fa:FontAwesome Text=" Salvar PDF" Foreground="{StaticResource MahApps.Brushes.Button.Foreground}"/>
                                                    </WrapPanel>
                                                </Button>
                                                <Button x:Name="ImprimirButton" Margin="2" Style="{StaticResource VendasButton}" HorizontalAlignment="Left"   VerticalAlignment="Top"   Width="100" Height="25" Click="ImprimirButton_Click" >
                                                    <WrapPanel>
                                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Print"  Foreground="White"/>
                                                        <fa:FontAwesome Text=" Imprimir PDF" Foreground="{StaticResource MahApps.Brushes.Button.Foreground}"/>
                                                    </WrapPanel>
                                                </Button>

                                            </WrapPanel>
                                            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                                                <Button x:Name="abrirxmlButton" Visibility="Visible" Margin="2" Style="{StaticResource VendasButton}" HorizontalAlignment="Left"   VerticalAlignment="Top"  Width="100" Height="25" Click="AbrirxmlButton_Click" >
                                                    <WrapPanel>
                                                        <fa:SvgAwesome Width="10" Height="10" Icon="Solid_Code"  Foreground="White"/>
                                                        <fa:FontAwesome Text=" Abrir XML" Foreground="{StaticResource MahApps.Brushes.Button.Foreground}"/>
                                                    </WrapPanel>
                                                </Button>
                                                <Button x:Name="SalvarButton" Margin="2" Style="{StaticResource VendasButton}" HorizontalAlignment="Left"   VerticalAlignment="Top"  Width="100" Height="25" Click="SalvarXMLButton_Click" >
                                                    <WrapPanel>
                                                        <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Save"  Foreground="White"/>
                                                        <fa:FontAwesome Text=" Salvar XML" Foreground="{StaticResource MahApps.Brushes.Button.Foreground}"/>
                                                    </WrapPanel>
                                                </Button>


                                            </WrapPanel>
                                        </StackPanel>
                                    </Grid>
                            </TabItem>
                                <TabItem  x:Name="retornotab"  Style="{StaticResource MeuTabItem}">
                                <TabItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <!--<fa:SvgAwesome Width="10" Height="10" Icon="Solid_ShoppingCart" Foreground="White"/>-->
                                        <TextBlock Text=" Retorno " VerticalAlignment="Center" />
                                    </StackPanel>
                                </TabItem.Header>
                                <Grid Margin="5"  >
                                    <StackPanel  >
                                        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                                            <TextBlock Text="Código:" Foreground="{StaticResource BlueCiafBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="21" Width="80" FontSize="9" Margin="1" />
                                            <TextBox x:Name="codigoTextBox" IsReadOnly="True" Style="{StaticResource MeuTextBox}" Width="325" Height="20" Grid.ColumnSpan="2" Margin="1" />
                                        </WrapPanel>
                                        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                                            <TextBlock Text="Motivo:" Foreground="{StaticResource BlueCiafBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="21" Width="80" FontSize="9" Margin="1" />
                                            <TextBox x:Name="MotivoTextBox" IsReadOnly="True" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" Width="325" Height="83" Grid.ColumnSpan="2" Margin="1" />
                                        </WrapPanel>
                                        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                                            <Button x:Name="GoogleButton" Margin="5" Style="{StaticResource VendasButton}" HorizontalAlignment="Left"   VerticalAlignment="Top" Click="GoogleButton_Click"  Width="100" Height="30" >
                                                <WrapPanel>
                                                    <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Globe"  Foreground="White"/>
                                                    <fa:FontAwesome Text=" Verificar " Foreground="White"/>
                                                </WrapPanel>
                                            </Button>
                                            <Button x:Name="SuporeButton" Margin="5" Style="{StaticResource VendasButton}" HorizontalAlignment="Left"   VerticalAlignment="Top" Click="SuporeButton_Click"  Width="100" Height="30" >
                                                <WrapPanel>
                                                    <fa:SvgAwesome Width="14" Height="14" Icon="Solid_LifeRing"  Foreground="White"/>
                                                    <fa:FontAwesome Text=" SUPORTE " Foreground="White"/>
                                                </WrapPanel>
                                            </Button>
                                        </WrapPanel>


                                    </StackPanel>
                                </Grid>
                            </TabItem>
                                <TabItem  x:Name="xmltab"  Style="{StaticResource MeuTabItem}">
                                <TabItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <!--<fa:SvgAwesome Width="10" Height="10" Icon="Solid_ShoppingCart" Foreground="White"/>-->
                                        <TextBlock Text=" Retorno - XML " VerticalAlignment="Center" />
                                    </StackPanel>
                                </TabItem.Header>
                                <Grid >
                                    <WebBrowser x:Name="WebXmlRetorno" Width="600" Height="225" />

                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Grid>
                    <Grid Grid.Row="1" Background="#EEEEEE" >
                      <WrapPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button  Width="80" Height="25" Margin="5" Click="ButtonSair_Click" Style="{StaticResource VendasColorButton}" Background="red">
                                <WrapPanel >
                                    <fa:SvgAwesome Width="14" Height="14" Icon="Solid_PowerOff" Foreground="White"/>
                                    <fa:FontAwesome Text=" SAIR " Foreground="White"/>
                                </WrapPanel>
                            </Button>

                            <Button  Width="80" Height="25" Margin="5" Click="ButtonVoltaClick" Style="{StaticResource VendasButton}">
                                <WrapPanel >
                                    <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Undo" Foreground="White"/>
                                    <fa:FontAwesome Text=" VOLTAR " Foreground="White"/>
                                </WrapPanel>
                            </Button>
                        </WrapPanel>


                    </Grid>
                </Grid>
                </WrapPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
