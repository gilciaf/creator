<mah:MetroWindow 
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        x:Class="nfecreator.TELAPROCESSAMENTONFCE"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        xmlns:local="clr-namespace:nfecreator"
        mc:Ignorable="d"
         Icon="/nfecreator;component/Pics/nfce.png" 
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MeuMetroWindowJanelas}" 
            Loaded="Window_Loaded"
        Closing="MetroWindow_Closing"
        Title=" CIAF - SOLUÇÕES EM SOFTWARE " Height="415" Width="800">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo  />
    </Window.TaskbarItemInfo>
    <Grid>
        <StackPanel>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Background="#FFFFFF"  >
                <Grid.RowDefinitions>
                    <RowDefinition Height="65"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" x:Name="StatusGrid" Background="{DynamicResource MahApps.Brushes.Accent}" Height="65"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock x:Name="statusTextBlock" Foreground="White" Text="PROCESSAMENTO DA NOTA FISCAL CONSUMIDOR"  FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="0" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <WrapPanel Grid.Column="0">
                            <Button Click="ButtonSite_Click" Style="{StaticResource LinkButton}" >
                                <StackPanel >
                                    <Image x:Name="ImagedeFundo" Source="https://ciaf.com.br/dfe/img/CREATORNFCE.png" Stretch="Fill" ImageFailed="Image_ImageFailed" Height="320" Width="180"  />
                                </StackPanel >
                            </Button>
                        </WrapPanel>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="55"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" >
                                <StackPanel >
                                    <WrapPanel>
                                        <TextBlock Text="Número da NFC-e:" Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120"  />
                                        <TextBox x:Name="NumeroTextBox"  Margin="5"  KeyDown="NumeroTextBox_KeyDown" Style="{DynamicResource MeuTextBox}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160" />
                                        <TextBlock Text="Série da Nota:"  Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />
                                        <TextBox x:Name="serieTextBox"  Margin="5" IsReadOnly="True" Style="{DynamicResource MeuTextBox}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160"/>
                                    </WrapPanel>
                                    <WrapPanel>
                                        <TextBlock Text="Status:" Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />
                                        <TextBox x:Name="statusTextBox" Margin="5" IsReadOnly="True" Style="{DynamicResource MeuTextBox}" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160"/>
                                        <TextBlock Text="Valor da Venda:"  Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />
                                        <TextBox x:Name="valorTextBox"  Margin="5" IsReadOnly="True" Style="{DynamicResource MeuTextBox}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160"/>

                                    </WrapPanel>
                                    <WrapPanel>
                                        <TextBlock Text="Nome Cliente:" Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />
                                        <TextBox x:Name="nomeTextBox" Margin="5" IsReadOnly="True" Style="{DynamicResource MeuTextBox}" HorizontalAlignment="Left" Height="23"  TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="460"/>
                                    </WrapPanel>
                                    <WrapPanel>
                                        <TextBlock Text="Chave da NFC-e:"  Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />
                                        <TextBox x:Name="chaveTextBox"  Margin="5" IsReadOnly="True" Style="{DynamicResource MeuTextBox}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="460"/>
                                    </WrapPanel>
                                    <WrapPanel>
                                    </WrapPanel>
                                    <WrapPanel>
                                        <TextBlock x:Name="JustificativaTextBlock"  Margin="5" Text="Justificativa:" Visibility="Collapsed" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="120" />
                                        <TextBox x:Name="JustificativaTextBox"  Margin="5" IsReadOnly="True" Visibility="Collapsed" Style="{DynamicResource MeuTextBox}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="460"/>
                                    </WrapPanel>
                                    <StackPanel Margin="5" HorizontalAlignment="Center"  VerticalAlignment="Center">
                                        <fa:SvgAwesome x:Name="Space"  Icon="Solid_SpaceShuttle" Width="50" Rotation="270" Foreground="{StaticResource BlueCiafBrush}" />
                                        <fa:SvgAwesome x:Name="Spinner" Visibility="Collapsed" Icon="Solid_Spinner"  Spin="True" SpinDuration="5" Width="40" Foreground="{StaticResource BlueCiafBrush}" />
                                        <TextBlock x:Name="CarregandoTextBlock" Visibility="Collapsed"  Text="Carregando... " HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                    </StackPanel>
                                    <TextBlock  x:Name="statusLabel" Margin="5" HorizontalAlignment="Left" Foreground="{DynamicResource BlueCiafBrush}" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Width="590" />

                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="1" Background="#EEEEEE">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <WrapPanel Grid.Column="0" Margin="2">
                                    <Button Name="BtnAutorizar" Margin="1" Width="65" Height="45" Background="Green" Click="Autorizar_Click" Style="{StaticResource VendasColorButton}">
                                        <StackPanel >
                                            <fa:SvgAwesome Width="14" Height="14" Icon="Solid_CheckCircle" Foreground="White"/>
                                            <fa:FontAwesome Text="Autorizar" Foreground="White"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Name="BtnVerificar" Margin="1"  Width="65" Height="45" Click="Verificar_Click" Background="Blue"  Style="{StaticResource VendasColorButton}">
                                        <StackPanel >
                                            <fa:SvgAwesome Width="14" Height="14" Icon="Regular_DotCircle" Foreground="White"/>
                                            <fa:FontAwesome Text="Verificar" Foreground="White"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Name="BtnCancelar" Style="{StaticResource VendasColorButton}" Background="Red"  Margin="1" Width="65" Height="45" Click="Cancelar_Click"  >
                                        <StackPanel>
                                            <fa:SvgAwesome Width="14" Height="14" Icon="Solid_TimesCircle" Foreground="White"/>
                                            <fa:FontAwesome Text="Cancelar" Foreground="White"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Name="BtnInutulizar" Background="Orange" Margin="1" Width="65" Height="45" Click="Inutilizar_Click" Style="{StaticResource VendasColorButton}">
                                        <StackPanel >
                                            <fa:SvgAwesome Width="14" Height="14" Icon="Solid_MinusCircle" Foreground="White"/>
                                            <fa:FontAwesome Text="Inutilizar" Foreground="White"/>
                                        </StackPanel>
                                    </Button>

                                </WrapPanel>
                                <WrapPanel Grid.Column="1" HorizontalAlignment="Right" Margin="2" >
                                    <Button Name="updateButton"  Width="80" Height="45" Click="BtnUpdate_Click" Style="{StaticResource VendasButton}">
                                        <StackPanel >
                                            <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Download" Foreground="White"/>
                                            <fa:FontAwesome Text="Atualiza Módulo"  FontSize="10" Foreground="White"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Name="StatusSefazBtn"  Width="80" Height="45" Click="BtnStatusSefaz_Click"  Style="{StaticResource VendasButton}">
                                        <StackPanel >
                                            <fa:SvgAwesome x:Name="BtnStatusNFeIcon" Width="14" Height="14" Icon="Solid_Circle" Foreground="White"/>
                                            <fa:FontAwesome Text="Status Sefaz" Foreground="White"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Name="ConfiguracaoBtn"  Width="80" Height="45" Click="Parametros_Click" Style="{StaticResource VendasButton}">
                                        <StackPanel >
                                            <fa:SvgAwesome Width="14" Height="14" Icon="Solid_Tools" Foreground="White"/>
                                            <fa:FontAwesome Text="Configuração" Foreground="White"/>
                                        </StackPanel>
                                    </Button>
                                </WrapPanel>

                            </Grid>
                        </Grid>
                    </Grid>


                </Grid>
            </Grid>

        </StackPanel>
        <local:TELARETORNONFCE x:Name="telaretorno" Visibility="Collapsed" />
    </Grid>
</mah:MetroWindow>