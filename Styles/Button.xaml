                    xmlns:local="clr-namespace:nfecreator">
    <Style x:Key="EntrarButton" TargetType="Button">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Width" Value="120"   />
        <Setter Property="Height" Value="40"   />
        <Setter Property="Margin" Value="1,1"/>

        <Setter Property="Background"  Value="{DynamicResource MahApps.Brushes.AccentBase}" />
        <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.AccentBase}" />
        <Setter Property="Foreground" Value="{DynamicResource Foreground}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" x:Name="Border"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1" CornerRadius="5,5,5,5"  
                            SnapsToDevicePixels="True">
                        <Grid>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.MouseOver}" TargetName="Border" />
                            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.MouseOver}" TargetName="Border" />
                            <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Button.Foreground}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin"  Value="true">
                            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Focus}" TargetName="Border"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Focus}" TargetName="Border" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Pressed}"  TargetName="Border" />
                            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Pressed}"   TargetName="Border" />
                            <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Button.Foreground}"  />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray}" TargetName="Border"/>
                            <Setter Property="BorderBrush" Value="Transparent" TargetName="Border"/>
                            <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Button.Foreground}"  />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Focus}" />
                            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Focus}" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

